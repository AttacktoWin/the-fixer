script/source = "extends HBoxContainer
	

func reload_inputs():
	for child in get_children():
		child.display_current_key()

func _input(event):
	var mode = int(event is InputEventJoypadButton or event is InputEventJoypadMotion)
	for child in get_children():
		child.set_mode(mode)
