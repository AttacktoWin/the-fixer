script/source = "extends HSlider

func _ready():
	reset_value()
	connect(\"mouse_entered\", self, \"_on_mouse_entered\")

func reset_value():
	self.value = AI.aim_assist

func _on_HSlider_value_changed(value):
	AI.aim_assist = value

func _on_mouse_entered():
	var owner = get_focus_owner()
	if owner:
		owner.release_focus()
	self.grab_focus()

func _input(event):
	get_parent().visible = (event is InputEventJoypadButton or event is InputEventJoypadMotion)
	
"

